<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Übung aus Katalog"
        android:id="@+id/uebungAusKatalog"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/neueUebungErstellen"
        android:layout_marginTop="32dp"
        android:layout_alignStart="@+id/neueUebungErstellen"
        android:elevation="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neue Übung erstellen"
        android:id="@+id/neueUebungErstellen"
        android:layout_below="@+id/uebungAusKatalog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

</RelativeLayout>