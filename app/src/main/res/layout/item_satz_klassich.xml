<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/txtPositionKlassisch"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wdh"
        android:id="@+id/txtWdh"
        android:layout_alignTop="@+id/txtPositionKlassisch"
        android:layout_toEndOf="@+id/txtPositionKlassisch"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pause"
        android:id="@+id/txtPauseKlassisch"
        android:layout_alignTop="@+id/txtWdh"
        android:layout_toEndOf="@+id/txtWdh"
        android:layout_marginStart="31dp" />

</RelativeLayout>